{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "process",
      "command": "node",
      "args": ["build.mjs"],
      "group": {"kind": "build"},
      "presentation": {"reveal": "silent"},
      "problemMatcher": []
    },
    {
      "label": "Build Release",
      "type": "process",
      "command": "node",
      "args": ["build.mjs", "--release"],
      "group": {"kind": "build"},
      "presentation": {"reveal": "silent"},
      "problemMatcher": []
    },

    {
      "label": "Publish",
      "dependsOn": "Build Release",
      "type": "process",
      "command": "vsce",
      "args": ["package", "--allow-star-activation"],
      "options": {"cwd": "dist"},
      "problemMatcher": []
    }
  ]
}