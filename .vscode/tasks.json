{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "process",
      "command": "npm",
      "args": ["run", "build"],
      "group": {"kind": "build", "isDefault": true},
      "presentation": {"reveal": "silent"},
      "problemMatcher": []
    },
    {
      "label": "Build Release",
      "type": "process",
      "command": "npm",
      "args": ["run", "build", "release"],
      "presentation": {"reveal": "silent"},
      "problemMatcher": []
    },

    {
      "label": "Publish",
      "dependsOn": "Build Release",
      "type": "process",
      "command": "vsce",
      "args": ["package", "-o", "..", "--allow-star-activation"],
      "options": {"cwd": "dist"},
      "problemMatcher": []
    }
  ]
}